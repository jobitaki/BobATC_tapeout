package BobATC;
  typedef enum logic [2:0] {
    T_REQUEST   = 3'b000,
    T_DECLARE   = 3'b001,
    T_EMERGENCY = 3'b010,
    T_CLEAR     = 3'b011,
    T_HOLD      = 3'b100,
    T_SAY_AGAIN = 3'b101,
    T_DIVERT    = 3'b110,
    T_ID_PLEASE = 3'b111
  } msg_type_t; 

  typedef struct packed {
    logic [3:0] plane_id;
    logic       active;
  } runway_t;

  typedef struct packed {
    logic [3:0] plane_id;
    msg_type_t  msg_type;
    logic [1:0] msg_action;
  } msg_t;
endpackage